<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>
    <Nullable>enable</Nullable>
    <IsPackable>false</IsPackable>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.NET.Test.Sdk" Version="16.9.4" />
    <PackageReference Include="MSTest.TestAdapter" Version="2.2.3" />
    <PackageReference Include="MSTest.TestFramework" Version="2.2.3" />
    <PackageReference Include="coverlet.collector" Version="3.0.2" />
    <PackageReference Include="Spectre.Console.Testing" Version="0.42.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="../ConsoleMarkdownRenderer.csproj" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="resources/**">
      <LogicalName>%(Identity)</LogicalName>
    </EmbeddedResource>
    <EmbeddedResource Include="../ConsoleMarkdownRenderer.Example/data/sub/xray.jpg">
      <LogicalName>resources/raw/xray.jpg</LogicalName>
    </EmbeddedResource>
  
    <Content Include="data/**">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

</Project>
